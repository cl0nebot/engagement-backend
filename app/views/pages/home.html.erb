<%= javascript_tag do -%>
  $(window).scroll(function(e){
    if (window.scrollY <= 600) { parallax() };
  });

  function parallax(){
    var scrolled = $(window).scrollTop();
    $('#hero1').css('background-position', 'center ' + -(scrolled * -0.005) +'rem');
    $('#hero1').css('opacity',1 - (scrolled * 0.00175));
    $('#hero1 h1, #hero1 p').css('color', 'rgba(255,255,255,' + (1 - (scrolled * 0.00875)) + ')');
  };
<% end %>