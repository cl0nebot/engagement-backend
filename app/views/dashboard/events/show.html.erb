<div class="large-12 columns">
  <div class="row" style="margin-top: 2rem">
    <div class="large-6 columns">
      <nav aria-label="You are here:" role="navigation">
        <ul class="breadcrumbs">
          <li><%= link_to "Home", root_path %></li>
          <li>
            <span class="show-for-sr">Current: </span> Events
          </li>
        </ul>
      </nav>
    </div>
    <div class="large-6 columns">
      <div class="callout">
      </div>
    </div>
  </div>
  <div class="row">
    <div class="large-4 columns">
      <div class="callout">
      <%= bar_chart @bar_chart.data, @bar_chart.options %>
      </div>
    </div>
    <div class="large-4 columns end">
      <div class="callout">
      </div>
    </div>
    <div class="large-4 columns end">
      <div class="callout">
      </div>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <div class="callout">
        <table>
          <thead>
            <tr>
              <th>Row Id</th>
              <th>Created At</th>
              <th>Source URL</th>
              <th>Referrer</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if @query_results.present? %>
              <% @query_results.values.each_with_index do |event, index| %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= event.time %></td>
                  <td><%= event.source_url %></td>
                  <td><%= event.referrer || "N/A" %></td>
                  <td><%= link_to("View", dashboard_event_detail_path(@api_key.uuid, event.uuid)) %></td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="4">No Events</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>